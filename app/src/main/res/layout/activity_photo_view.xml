<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.PhotoViewActivity">

    <ImageView
        android:id="@+id/currentImg"
        android:layout_width="fill_parent"
        android:layout_height="650dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_account_circle_black_48" />


    <ImageView
        android:id="@+id/deleteImg"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_delete_black_48"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/editImg"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_create_black_48"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/deleteImg"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>