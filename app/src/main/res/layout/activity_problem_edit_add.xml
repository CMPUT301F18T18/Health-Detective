<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.ProblemEditAddActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="26dp"
        android:text="@string/problemTitle"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/dateText"
        app:layout_constraintStart_toStartOf="@+id/problemTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/problemTitle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/signup_border"
        android:ems="10"
        android:hint="@string/problemTitle"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/problemDate"
        app:layout_constraintEnd_toEndOf="@+id/problemDate"
        app:layout_constraintStart_toStartOf="@+id/dateText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/problemDate"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="77dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/signup_border"
        android:ems="10"
        android:hint="@string/problemDate"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/problemDesc"
        app:layout_constraintEnd_toEndOf="@+id/problemDesc"
        app:layout_constraintStart_toStartOf="@+id/dateText"
        app:layout_constraintTop_toBottomOf="@+id/problemTitle" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="141dp"
        android:text="@string/problemDate"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/problemDesc"
        android:layout_width="304dp"
        android:layout_height="171dp"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/signup_border"
        android:ems="10"
        android:hint="@string/problemDesc"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/cancelBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problemDate" />

    <TextView
        android:id="@+id/descText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/problemDesc"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cancelBtn"
        app:layout_constraintStart_toStartOf="@+id/problemDesc"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="51dp"
        android:text="@string/cancelBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problemDesc" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="85dp"
        android:text="@string/saveBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>