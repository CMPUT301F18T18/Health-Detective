<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"

    android:layout_height="wrap_content" >

    <LinearLayout

        android:layout_width="fill_parent"

        android:layout_height="fill_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recTitle"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/recordDate"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="@string/recDate" />

        <TextView
            android:id="@+id/BLTitle"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/blPic"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/frontBL"
                    android:layout_width="180dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_photo_camera_black_18dp" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="?android:attr/listDivider"
                    android:textColor="@color/border_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/backBL"
                    android:layout_width="180dp"
                    android:layout_height="165dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_photo_camera_black_18dp" />

                <TextView
                    android:id="@+id/frontTag"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="83dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/blFront"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frontBL" />

                <TextView
                    android:id="@+id/backTag"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="73dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/blBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/backBL" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/allphotosTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:text="@string/photos"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/addNPhoto"
                    android:layout_width="83dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="8dp"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/allphotosTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_photo_camera_black_24dp" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/bodyPhotoScroll"
            android:layout_width="match_parent"
            android:layout_height="106dp">

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/commentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problemDesc"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/commentView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/signup_border"
            android:text="@string/problemDesc" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mapTitle"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mapTitle"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mapEdit"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_geo"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/mapTitle"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map_record_display"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:context=".presentation.view.activity.MapActivity" />


    </LinearLayout>
    </ScrollView>
