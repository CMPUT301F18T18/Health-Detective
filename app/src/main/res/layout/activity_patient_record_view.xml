<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"

    android:layout_height="wrap_content" >

    <LinearLayout

        android:layout_width="fill_parent"

        android:layout_height="fill_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recTitle"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/recordDate"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="@string/recDate" />

        <ImageView
            android:id="@+id/cutOutImg"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/BLTitle"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/blPic"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <HorizontalScrollView
            android:id="@+id/bodyPhotoScroll"
            android:layout_width="match_parent"
            android:layout_height="106dp">

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/commentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problemDesc"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/commentView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/signup_border"
            android:text="@string/problemDesc" />

        <TextView
            android:id="@+id/mapTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mapTitle"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="230dp" />

        <TextView
            android:id="@+id/allphotosTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/allPhotos"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <GridView
            android:id="@+id/allPhotosView"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:numColumns="3" />

    </LinearLayout>
    </ScrollView>
